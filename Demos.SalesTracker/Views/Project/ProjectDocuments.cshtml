@{
    /**/

    ViewBag.Title = "ProjectDocuments";
}
@model Demos.SalesTracker.Models.ProjectDocument

<div id="ProjectDocumentsSection"  class="agcontainer">
    <div class="row">
        <div class="col-50-left">
            <label>Project Documents:</label>
        </div>
        <div class="col-50-right">
            <label>Supporting Documents:</label>
        </div>
    </div>
    <div class="row">
        <div class="col-50-left">
            <label>Choose From Existing Documents</label>   <br />
            <label>
                File Name:
            </label>     <br />
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownList("SubRegion", ViewBag.ProjectDocuments as SelectList, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <b>OR</b>  <br />
            <label>Upload Document</label>  <br />
            @using (Html.BeginForm("SaveProjectDoc", "Project", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="file" id="postedFiles" multiple name="ProjectDocFiles" />
                <input type="submit" value="Upload" />
            }

        </div>
        <div class="col-50-right">
            <label>Choose From Existing Documents</label>   <br />
            <label>
                File Name:
            </label>     <br />
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownList("SubRegion", ViewBag.SupportingDocuments as SelectList, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <b>OR</b>  <br />
            <label>Upload Document</label>  <br />
            @using (Html.BeginForm("SaveSupooritngDoc", "Project", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="file" multiple name="SupportingtDocFiles" />
                <input type="submit" value="Upload" />
            }
        </div>
    </div>
</div>

